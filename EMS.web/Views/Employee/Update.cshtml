@model EMS.core.Employee

<div class="container mt-4">
    <h2 class="mb-4">Update Employee</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group row mb-3">
            <label asp-for="FirstName" class="col-sm-2 col-form-label">First Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter First Name" required>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="LastName" class="col-sm-2 col-form-label">Last Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="LastName" placeholder="Enter Last Name" required>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" asp-for="Email" placeholder="Enter Email" required>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="DOB" class="col-sm-2 col-form-label">Date of Birth</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" asp-for="DOB" required>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="Mobile" class="col-sm-2 col-form-label">Mobile</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" asp-for="Mobile" placeholder="Enter Mobile Number" required>
            </div>
        </div>

        <div class="form-group row mb-3">
            <label asp-for="PhotoPath" class="col-sm-2 col-form-label">Photo</label>
            <div class="col-sm-10">
                <input type="file" class="form-control" asp-for="PhotoPath">
            </div>
        </div>
        <div class="form-group row mb-3" hidden>
            <label asp-for="Photo" class="col-sm-2 col-form-label">Photo</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="Photo">
            </div>
        </div>

        <div class="form-group row mb-3">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Update</button>
                <a href="@Url.Action("Index", "Employee")" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </form>
</div>
